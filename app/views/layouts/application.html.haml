!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title
      DevCo
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    %link{:href => "http://fonts.googleapis.com/css?family=Josefin+Slab:600|Pacifico", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags
    = favicon_link_tag "Icon.ico"
  %body
    .container-fluid
      .row
        .col-xs-0.col-md-1
        .col-xs-6.col-md-5
          = image_tag("DevCo.png", :id => "DevCo")
        .col-xs-5
          = image_tag("Logo.png", :id => "Logo")
        .col-xs-1
      .visible-xs
        .space-
      .row
        .hidden-xs
          .col-xs-12#nav_wrapper
            .row
              .col-xs-12.text-center
                .row
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.no_wrap#menu_1{:href => root_path+"#what_we_do"} What We Do
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.no_wrap#menu_2{:href => root_path+"#how_we_work"} How We Work
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.no_wrap#menu_3{:href => root_path+"#about_us"} About Us
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.no_wrap#menu_4.menu_title{:href => contact_path} Contact
        .visible-xs
          .col-xs-12#nav_wrapper_2
            .row
              .col-xs-12.text-center
                .row
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.small_font.no_wrap#menu_1-xs{:href => root_path+"#what_we_do"} What We Do
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.small_font.no_wrap#menu_2-xs{:href => root_path+"#how_we_work"} How We Work
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.small_font.no_wrap#menu_3-xs{:href => root_path+"#about_us"} About Us
                  .col-xs-6.col-md-3
                    %a.nav_title.menu_title.small_font.no_wrap#menu_4-xs.menu_title{:href => contact_path} Contact
          .space-8
      .row
        .col-xs-12
          = yield
.visible-xs
  = link_to image_tag("Logo.png", :id => "Logo_2-xs"), root_path
.hidden-xs
  = link_to image_tag("Logo.png", :id => "Logo_2"), root_path


